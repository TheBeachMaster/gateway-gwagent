<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/aclMgmtObject"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:gravity="top"
        android:layout_marginTop="10dp" 
        android:textSize="17sp"/>

    
    <CheckBox
        android:id="@+id/aclMgmtAllowObjectChkBx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aclMgmtObject"
        android:layout_alignLeft="@+id/aclMgmtObject"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="@string/acl_mgmt_allow_object_lbl"
        android:textSize="17sp"/>
    
    
    <CheckBox
        android:id="@+id/aclMgmtAllowSubObjectsChkBx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/aclMgmtAllowObjectChkBx"
        android:layout_alignBaseline="@+id/aclMgmtAllowObjectChkBx"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="@string/acl_mgmt_allow_sub_objects_lbl"
        android:textSize="17sp"/>
  
</RelativeLayout>
