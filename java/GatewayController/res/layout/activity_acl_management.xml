<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aclDrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        
    <RelativeLayout
        android:id="@+id/aclMgmtMainContainer"
	    android:layout_width="match_parent"
	    android:layout_height="fill_parent" >
	    
	    <FrameLayout
	        android:id="@+id/aclMgmtHeaderFragmentFrame"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" />
	    
	           
        <FrameLayout
            android:id="@+id/aclMgmtButtonFragmentFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:layout_below="@+id/aclMgmtHeaderFragmentFrame"/>
	    
	    <FrameLayout
	        android:id="@+id/aclMgmtConfDataFragmentFrame"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/aclMgmtButtonFragmentFrame" />

    </RelativeLayout>

    <ListView
        android:id="@+id/aclMgmtItemsDrawer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#2576B0"/>
     
</android.support.v4.widget.DrawerLayout>
