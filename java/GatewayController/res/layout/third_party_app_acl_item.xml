<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tpAclName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        
                
        android:singleLine="true"
        android:ellipsize="end"
        android:maxEms="8"
        android:lines="1"
        
        android:text="AclNameZZZZZZZZZZZZCCzzzz" />

    <Switch
        android:id="@+id/tpAclActiveSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:text="@string/tp_acls_active_lbl"
        android:textOff="@string/tp_acls_active_lbl_n"
        android:textOn="@string/tp_acls_active_lbl_y" 
        android:focusable="false"
        android:focusableInTouchMode="false"/>

</RelativeLayout>
